            {
                "session_id": "060414c45afa",
                "role": "Agent",
                "script_annotation": "很高兴为您服务，请问今天有什么可以帮您的吗？",
                "action_annotation": "表示欢迎并询问客户目的"
            },
            {
                "session_id": "060414c45afa",
                "role": "User",
                "script_annotation": "我想借几本书。",
                "action_annotation": "想要借书"
            },
            {
                "session_id": "060414c45afa",
                "role": "Agent",
                "script_annotation": "请问您有我们的借书证吗？",
                "action_annotation": "询问是否有借书证"
            },
            {
                "session_id": "060414c45afa",
                "role": "User",
                "script_annotation": "没有，我还没有办借书证。",
                "action_annotation": "没有借书证"
            },
            {
                "session_id": "060414c45afa",
                "role": "Agent",
                "script_annotation": "好的，您需要先办理借书证才能借书，您愿意现在办理吗？",
                "action_annotation": "询问是否办理借书证以继续借阅"
            },
            {
                "session_id": "060414c45afa",
                "role": "User",
                "script_annotation": "可以的。",
                "action_annotation": "同意办理"
            },
            {
                "session_id": "060414c45afa",
                "role": "Agent",
                "script_annotation": "那请您出示一下您的身份证，我来帮您办理借书证。",
                "action_annotation": "要求客户出示身份证"
            },
            {
                "session_id": "060414c45afa",
                "role": "User",
                "script_annotation": "好的，这是我的身份证。",
                "action_annotation": "递交身份证"
            },
            {
                "session_id": "060414c45afa",
                "role": "Agent",
                "script_annotation": "请稍等，我来为您办理借书证……好了，这是您的借书证。",
                "action_annotation": "完成办理"
            },
            {
                "session_id": "060414c45afa",
                "role": "User",
                "script_annotation": "好的，谢谢。",
                "action_annotation": "习惯性应答可以继续"
            },
            {
                "session_id": "060414c45afa",
                "role": "Agent",
                "script_annotation": "请问您想借阅哪些书呢？",
                "action_annotation": "询问要借阅的书名"
            },
            {
                "session_id": "060414c45afa",
                "role": "User",
                "script_annotation": "我想借《乡土中国》和《文化苦旅》。",
                "action_annotation": "告知需要借阅的书名"
            },
            {
                "session_id": "060414c45afa",
                "role": "Agent",
                "script_annotation": "好的，我来为您登记并办理借阅手续……好了，您现在可以借阅这两本书了。",
                "action_annotation": "记录借阅书名并办理借阅"
            },
            {
                "session_id": "060414c45afa",
                "role": "User",
                "script_annotation": "谢谢您！",
                "action_annotation": "感谢"
            },
            {
                "session_id": "060414c45afa",
                "role": "Agent",
                "script_annotation": "不客气，您已经成功借阅了这两本书。",
                "action_annotation": "完成借阅办理"
            },
            {
                "session_id": "060414c45afa",
                "role": "User",
                "script_annotation": "非常感谢！",
                "action_annotation": "感谢"
            },
            {
                "session_id": "060414c45afa",
                "role": "Agent",
                "script_annotation": "感谢您的配合，祝您阅读愉快！",
                "action_annotation": "礼貌结束"
            },
            {
                "session_id": "060414c45afa",
                "role": "User",
                "script_annotation": "好的，再见！",
                "action_annotation": "结束"
            }
        ]
